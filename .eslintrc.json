{
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": [
    "node_modules/"
  ],
  "env": {
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["./_src/pages/**/*.vue"],
      "rules": { "vue/multi-word-component-names": "off"
      }
    }
  ]
}