{%- set currentPostMentions = webmentions | webmentionsForPage(permalink) -%}
{%- set postMentionCount = webmentions | webmentionCountForPage(permalink) -%}

<section
  class="main-grid-content webmentions"
  aria-labelledby="hdl-webmentions"
>
  <h2
    class="sr-only"
    id="hdl-webmentions"
  >
    {{ postMentionCount}} Webmentions
  </h2>
  <section class="webmentions-info">
    <details
      class="webmentions__counts"
      style="--content-count: {{ currentPostMentions.likes.length }}"
    >
      <summary>
        <h3 class="webmentions__headline">{{ currentPostMentions.likes.length }} Likes</h3>
      </summary>
      <ul class="webmention-profile-grid">
        {% for post in currentPostMentions.likes %}
          <li><a
            href="{{ post.author.url }}"
            aria-label="Profile of {{ post.author.name }}"
          >
            <img
              src="{{ post.author.photo }}"
              alt="{{ post.author.name }}"
              data-process-image
              data-image-widths="[32, 64]"
              data-image-sizes="2rem"
            >
          </a>
        {% endfor %}
      </ul>
    </details>
    <details
      class="webmentions__counts"
      style="--content-count: {{ currentPostMentions.reposts.length }}"
    >
      <summary>
        <h3 class="webmentions__headline">{{ currentPostMentions.reposts.length }} Reposts</h3>
      </summary>
      <ul class="webmention-profile-grid">
        {% for post in currentPostMentions.reposts %}
          <li><a
            href="{{ post.author.url }}"
            aria-label="Profile of {{ post.author.name }}"
          >
            <img
              src="{{ post.author.photo }}"
              alt="{{ post.author.name }}"
              data-process-image
              data-image-widths="[32, 64]"
              data-image-sizes="2rem"
            >
          </a>
        {% endfor %}
      </ul>
    </details>
  </section>
  <p class="t-end">
    <small>
      Using <a href="https://indieweb.org/Webmention">Webmentions</a> and <a href="https://webmention.io">webmention.io</a>.
    </small>
  </p>
</section>