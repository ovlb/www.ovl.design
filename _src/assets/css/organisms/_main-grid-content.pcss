.main-grid-content {
  display: grid;
  grid-template-columns: var(--content-grid-columns);
  margin-inline-end: auto;
  margin-inline-start: auto;
  max-width: var(--content-width-base);

  & > * {
    grid-column: var(--content-grid-placement, main);
  }

  & + & {
    margin-top: var(--space-m);
  }
}
