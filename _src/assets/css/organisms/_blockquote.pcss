:where(blockquote:not(.tweet-card)) {
  --content-grid-placement: full;

  line-height: 1.4;
  margin-block: var(--space-s);
  padding-left: var(--padding-base);
  padding-right: var(--padding-base);
  position: relative;
  width: min(90%, var(--content-width-small));

  &::before {
    color: var(--clr-accent);
    content: '“';
    font-family: var(--fonts-headline);
    font-size: var(--step-4);
    left: var(--bq-decorator-offset, 0);
    position: absolute;
    top: calc(-0.25 * var(--padding-base));
  }
}

.c-blockquote {
  --bq-decorator-offset: calc(-0.5 * var(--padding-base));

  margin-block: var(--space-s);
  padding-left: var(--padding-base);

  & > * {
    margin: 0;
    padding: 0;
  }
}

.c-blockquote__attribution {
  display: flex;
  font-style: italic;
  gap: var(--space-2xs);
  max-width: var(--content-width-small);
  padding-top: var(--space-2xs);

  &::before {
    content: '☞';
    display: block;
  }
}
